---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Regístrate - Chotalac">
    <section class="min-h-screen flex items-center justify-center py-12 md:py-16 lg:py-20">
        <div class="container mx-auto px-4">
            <div class="max-w-2xl mx-auto">
                <div class="text-center mb-8">
                    <h1 class="text-3xl md:text-4xl lg:text-5xl font-titles-2 font-bold text-gray-800 mb-2">
                        Crear Cuenta
                    </h1>
                    <p class="text-gray-600">
                        Únete a la familia Chotalac
                    </p>
                </div>
                <div class="bg-white rounded-2xl shadow-xl p-8">
                    <form class="space-y-6">
                        <div>
                            <label for="username" class="block text-sm font-semibold text-gray-700 mb-2">
                                Usuario
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="user-outline" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input
                                    type="text"
                                    id="username"
                                    name="username"
                                    required
                                    class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary focus:outline-none transition-all duration-300 ease-in-out"
                                    placeholder="Tu nombre de usuario"
                                />
                            </div>
                        </div>
                        <div>
                            <label for="birthyear" class="block text-sm font-semibold text-gray-700 mb-2">
                                Año de Nacimiento
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="calendar" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input
                                    type="number"
                                    id="birthyear"
                                    name="birthyear"
                                    required
                                    min="1900"
                                    max="2024"
                                    maxlength="4"
                                    class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary focus:outline-none transition-all duration-300 ease-in-out"
                                    placeholder="Ej: 1990"
                                />
                            </div>
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                                Correo Electrónico
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="email-duotone" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary focus:outline-none transition-all duration-300 ease-in-out"
                                    placeholder="tu@email.com"
                                />
                            </div>
                        </div>
                        <div>
                            <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
                                Contraseña
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="lock" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input
                                    type="password"
                                    id="password"
                                    name="password"
                                    required
                                    minlength="6"
                                    class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary focus:outline-none transition-all duration-300 ease-in-out"
                                    placeholder="Mínimo 6 caracteres"
                                />
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="w-full bg-primary hover:bg-primary/90 cursor-pointer text-white font-bold py-3 px-4 rounded-lg transition-colors shadow-lg hover:shadow-xl"
                        >
                            Crear Cuenta
                        </button>
                        <div class="text-center pt-4">
                            <p class="text-gray-600">
                                ¿Ya tienes una cuenta?{" "}
                                <a
                                    href="/iniciar-sesion"
                                    class="text-primary hover:text-primary/80 font-semibold transition-colors"
                                >
                                    Iniciar Sesión
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
                <!-- <p class="text-center text-sm text-gray-500 mt-6">
                    Al crear una cuenta, aceptas nuestros{" "}
                    <a href="/terminos" class="text-primary hover:underline">Términos y Condiciones</a>
                    {" "}y{" "}
                    <a href="/privacidad" class="text-primary hover:underline">Política de Privacidad</a>
                </p> -->
            </div>
        </div>
    </section>
</Layout>