---
interface Props {
    id: string;
    name: string;
    imageUrl: string;
    bgColor: string;
    isReversed?: boolean;
}

const { id, name, imageUrl, bgColor, isReversed = false } = Astro.props;

const textBgColor = bgColor.replace('-light', '');
---

<a
    href={`/category/${id}`}
    class={`${bgColor} flex w-full h-[400px] md:h-[500px] lg:h-[600px] hover:opacity-90 transition-opacity duration-300 group ${isReversed ? 'flex-row-reverse' : ''}`}
>
    <div class={`flex items-center justify-center px-6 md:px-8 lg:px-12 ${textBgColor}`}>
        <h2
            class={`text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-titles-2 font-bold  whitespace-nowrap group-hover:brightness-110 transition-all duration-300`}
            style={`writing-mode: vertical-rl; text-orientation: mixed; ${!isReversed ? 'transform: rotate(180deg);' : ''}`}
        >
            {name}
        </h2>
    </div>
    <div class="flex-1 relative overflow-hidden">
        <img
            src={imageUrl}
            alt={`CategorÃ­a ${name}`}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        />
    </div>
</a>