---
interface Props {
	title?: string;
	imageUrl?: string;
}

const { title = "Productos", imageUrl = "/images/categories/banner.webp" } = Astro.props;
---

<section class="relative w-full h-[400px] md:h-[500px] lg:h-[600px]">
	<div
		class="absolute inset-0 bg-cover bg-center"
		style={`background-image: url('${imageUrl}');`}
	>
		<div class="absolute inset-0 bg-black/30"></div>
	</div>

	<div class="relative h-full flex items-center justify-center">
		<h1
			class="text-5xl lg:text-7xl xl:text-9xl font-titles-2 text-shadow-lg font-bold text-white text-center px-4"
		>
			{title}
		</h1>
	</div>
</section>
