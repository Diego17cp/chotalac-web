---
import { CATEGORIES } from "@/constants/categories";
import CategoryItem from "./CategoryItem.astro";

const lightColors = [
    "bg-secondary-light",
    "bg-tertiary-light",
    "bg-quaternary-light",
];
const bgColors = [
    "bg-secondary",
    "bg-tertiary",
    "bg-quaternary",
]
---

<section class="w-full">
    {CATEGORIES.map((category, index) => {
        const bgColor = lightColors[index % lightColors.length];
        const bgTextColor = bgColors[index % bgColors.length];
        const isEven = index % 2 === 0;
        return (
            <CategoryItem
                id={category.id}
                name={category.name}
                imageUrl={category.imageUrl}
                bgColor={bgColor}
                isReversed={!isEven}
                bgTextColor={bgTextColor}
            />
        );
    })}
</section>