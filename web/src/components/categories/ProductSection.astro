---
import type { ProductPresentation } from "@/types";
import PresentationCard from "./PresentationCard.astro";

interface Props {
    name: string;
    presentations: ProductPresentation[];
    cardBg: string;
}

const { name, presentations, cardBg } = Astro.props;
---

<div class="space-y-8">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-titles-2 font-bold text-center text-gray-800">
        {name}
    </h2>
    
    <div class="flex flex-wrap justify-center gap-6">
        {presentations.map((presentation) => (
            <div class="w-[calc(50%-0.75rem)] sm:w-[calc(33.333%-1rem)] md:w-[calc(25%-1.125rem)] lg:w-[calc(20%-1.2rem)]">
                <PresentationCard
                    id={presentation.id}
                    name={presentation.name}
                    imageUrl={presentation.imageUrl}
                    cardBg={cardBg}
                />
            </div>
        ))}
    </div>
</div>