---
interface Props {
    title: string;
    description: string;
    imagePath: string;
    index: number;
}

const { title, description, imagePath, index } = Astro.props;
const isEven = index % 2 === 0;
---

<div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center ${isEven ? '' : 'lg:flex-row-reverse'}`}>
    <div class={`${isEven ? 'order-2' : 'order-2 lg:order-1'}`}>
        <img
            src={imagePath}
            alt={title}
            class="w-full h-64 md:h-80 lg:h-96 rounded-lg shadow-lg object-cover"
        />
    </div>
    <div class={`${isEven ? 'order-1' : 'order-1 lg:order-2'}`}>
        <div class="flex items-start gap-4 mb-4">
            <div class="shrink-0 w-12 h-12 md:w-16 md:h-16 bg-primary rounded-full flex items-center justify-center">
                <span class="text-white text-xl md:text-2xl font-bold">{index + 1}</span>
            </div>
            <h3 class="text-2xl md:text-3xl font-bold text-primary pt-2">
                {title}
            </h3>
        </div>
        <p class={`text-gray-700 text-base md:text-lg leading-relaxed ${isEven ? '' : 'lg:text-right'}`}>
            {description}
        </p>
    </div>
</div>